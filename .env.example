# Frontend Environment Variables

# Mock Mode Toggle
# true = Use mock data (no backend needed)
# false = Use real API (requires VITE_API_BASE_URL)
VITE_USE_MOCK=true

# API Base Domain (without /api/v1 - that's handled by the app)
# Only needed when VITE_USE_MOCK=false
# Development: http://localhost:8080
# Production: https://api.domain.com
VITE_API_BASE_URL=http://localhost:8080
